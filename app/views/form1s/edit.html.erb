<h1>Update Form</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @form1 do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :time %>
      <%= f.text_field :time %>

      <%= f.label :job %>
      <%= f.text_field :job %>

      <%= f.label :date %>    
      <%= f.date_field :date, value: @form1.date %>

      <%= f.label :customer %>
      <%= f.text_field :customer %>

      <%= f.label :income %>
      <%= f.number_field :income %>

      <%= f.label "Description" %>
      <%= f.text_field :work_desc %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
